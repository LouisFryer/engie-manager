<p id="notice"><%= notice %></p>

<h1>Listing Order Items</h1>

<table>
  <thead>
    <tr>
      <th>Order id</th>
      <th>Item code</th>
      <th>Item description</th>
      <th>Quantity</th>
      <th>Unit</th>
      <th>Sub total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_items.each do |order_item| %>
      <tr>
        <td><%= order_item.order_ID %></td>
        <td><%= order_item.item_code %></td>
        <td><%= order_item.item_description %></td>
        <td><%= order_item.quantity %></td>
        <td><%= order_item.unit %></td>
        <td><%= order_item.sub_total %></td>
        <td><%= link_to 'Show', order_item %></td>
        <td><%= link_to 'Edit', edit_order_item_path(order_item) %></td>
        <td><%= link_to 'Destroy', order_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

